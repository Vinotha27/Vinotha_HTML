    <script>
      function toggleLeftPanel() {
          const leftPanel = document.getElementById('left-panel');
          const arrow = document.getElementById('arrow');
  
          if (leftPanel.classList.contains('hidden')) {
              leftPanel.classList.remove('hidden'); // Show the panel
              leftPanel.classList.add('w-1/4'); // Expand width
              arrow.innerHTML = "&lt;&lt;&lt;"; // Change arrow direction
          } else {
              leftPanel.classList.remove('w-1/4'); // Remove width
              leftPanel.classList.add('hidden'); // Hide panel
              arrow.innerHTML = "&gt;&gt;&gt;"; // Reset arrow direction
          }
      }
  </script>
  <style>
    body {
